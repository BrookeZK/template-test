{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk=9229",
        "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
        "--runInBand",
        "--nolazy=true"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
    }
  ]
}